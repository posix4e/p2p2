{
  "name": "p2p2",
  "version": "1.0.0",
  "description": "P2P communication library using Cloudflare DNS for peer discovery and WebRTC for data transfer",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:extension": "npm run build && node esbuild.extension.js",
    "dev": "tsc --watch",
    "example": "vite serve example",
    "server": "node server.js",
    "test": "playwright test tests/extension-service-worker.spec.ts",
    "test:sync": "playwright test tests/extension-p2p-sync.spec.ts",
    "test:all": "playwright test",
    "test:headed": "playwright test --headed",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts example/**/*.{html,js,ts}"
  },
  "keywords": [
    "p2p",
    "webrtc",
    "cloudflare",
    "dns",
    "peer-to-peer"
  ],
  "license": "MIT",
  "devDependencies": {},
  "dependencies": {}
}
