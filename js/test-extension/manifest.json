{
  "manifest_version": 3,
  "name": "P2P2 Test Extension",
  "version": "1.0.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.cloudflare.com/*"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dist/*.js",
        "test-page.html",
        "test-page.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_start"
    }
  ]
}